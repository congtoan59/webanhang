  .card {
    width: 100%;
    height: 500px;
    padding: 0 15px;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    gap: 12px;
    background: #fff;
    border-radius: 20px;
  }

  .card>* {
    margin: 0;
  }

  .card__title {
    font-size: 23px;
    font-weight: 900;
    color: #333;
    letter-spacing: 1px;
  }

  .card__content {
    font-size: 13px;
    line-height: 18px;
    color: #333;
  }

  .card__form {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .card__form input {
    margin-top: 10px;
    outline: 0;
    background: rgb(255, 255, 255);
    box-shadow: transparent 0px 0px 0px 1px inset;
    padding: 1.3rem;
    border-radius: 10px;
    border: 1px solid #333;
    color: black;
    font-weight: 500;
    letter-spacing: 1px;
  }

  .card__form button {
    margin: auto;
    width: 50%;
    border: 0;
    background: #fff;
    color: #000;
    border: solid 1px #000;
    padding: 0.68em;
    border-radius: 20px;
    font-weight: bold;
    letter-spacing: 1px ;
  }

  .sign-up:hover {
    opacity: 0.8;
    background-color: #333;
    color: #fff;
  }
  
 
</style>

